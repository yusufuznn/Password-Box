@model PasswordBox.Web.Models.ViewModels.AddDataRequest
@{
}

<style>
    .form-container {
        max-width: 600px;
        margin: 3rem auto 5rem auto;
        background: #fff;
        padding: 2.5rem 2rem;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    }

    h1 {
        font-weight: 700;
        margin-bottom: 2rem;
        text-align: center;
        color: #343a40;
    }

    label {
        font-weight: 600;
        color: #495057;
    }

    .btn-dark {
        width: 100%;
        padding: 0.75rem;
        font-size: 1.1rem;
        border-radius: 8px;
        transition: background-color 0.3s ease;
    }

        .btn-dark:hover {
            background-color: #23272b;
        }
</style>

<div class="bg-secondary bg-opacity-10 py-3">
    <div class="container">
        <h1>Yeni Kayıt Ekle</h1>
    </div>
</div>

<div class="container">
    <div class="form-container">
        <form method="post" autocomplete="off">
            <div class="mb-4">
                <label class="form-label" for="websiteName">Site Adı</label>
                <input type="text" class="form-control" id="websiteName" asp-for="WebsiteName" placeholder="Örnek: facebook.com" />
            </div>

            <div class="mb-4">
                <label class="form-label" for="username">Kullanıcı Adı</label>
                <input type="text" class="form-control" id="username" asp-for="UserName" placeholder="Kullanıcı adınızı girin" />
            </div>

            <div class="mb-4">
                <label class="form-label" for="password">Şifre</label>
                <input type="text" class="form-control" id="password" asp-for="Password" placeholder="Şifrenizi girin" />
            </div>

            <button type="submit" class="btn btn-dark">Kaydet</button>
        </form>
    </div>
</div>
