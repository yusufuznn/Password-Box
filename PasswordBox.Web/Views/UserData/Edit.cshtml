@model PasswordBox.Web.Models.ViewModels.EditDataRequest
@{
}

<style>
    .form-container {
        max-width: 600px;
        margin: 3rem auto 5rem auto;
        background: #fff;
        padding: 2.5rem 2rem;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    }

    h1 {
        font-weight: 700;
        margin-bottom: 2rem;
        text-align: center;
        color: #343a40;
    }

    label {
        font-weight: 600;
        color: #495057;
    }

    input[readonly] {
        background-color: #e9ecef;
    }

    .btn-dark, .btn-danger {
        padding: 0.75rem 1.5rem;
        font-size: 1.1rem;
        border-radius: 8px;
        transition: background-color 0.3s ease;
    }

        .btn-dark:hover {
            background-color: #23272b;
        }

        .btn-danger:hover {
            background-color: #b02a37;
        }

    .btn-group {
        display: flex;
        gap: 1rem;
        margin-top: 1rem;
    }
</style>

<div class="bg-secondary bg-opacity-10 py-3">
    <div class="container">
        <h1>Kayıtları Düzenle</h1>
    </div>
</div>

<div class="container">
    <div class="form-container">
        <form method="post">
            <div class="mb-4">
                <label class="form-label" for="id">Id</label>
                <input type="text" id="id" class="form-control" asp-for="Id" readonly />
            </div>

            <div class="mb-4">
                <label class="form-label" for="websiteName">Site Adı</label>
                <input type="text" id="websiteName" class="form-control" asp-for="WebsiteName" />
            </div>

            <div class="mb-4">
                <label class="form-label" for="username">Kullanıcı Adı</label>
                <input type="text" id="username" class="form-control" asp-for="UserName" />
            </div>

            <div class="mb-4">
                <label class="form-label" for="password">Şifre</label>
                <input type="text" id="password" class="form-control" asp-for="Password" />
            </div>

            <div class="btn-group">
                <button type="submit" class="btn btn-dark" name="action" value="edit">Düzenle</button>

                <button class="btn btn-danger" type="submit" name="action" value="delete"
                        asp-area=""
                        asp-controller="UserData"
                        asp-action="Delete">
                    Sil
                </button>
            </div>
        </form>
    </div>
</div>
