@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager

@{
    ViewData["Title"] = "Ana Sayfa";
}

<style>
    .full-height-section {
        min-height: calc(100vh - 100px); 
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
    }

    .hero-content {
        max-width: 900px;
        width: 100%;
        padding: 60px 40px;
        background: linear-gradient(135deg, #0052D4, #4364F7, #6FB1FC);
        color: white;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        text-align: center;
    }

        .hero-content h1 {
            font-size: 2.8rem;
            font-weight: bold;
        }

        .hero-content p {
            font-size: 1.2rem;
            margin-top: 1rem;
        }

    .btn-register {
        margin-top: 2rem;
        font-size: 1.1rem;
        padding: 0.75rem 2rem;
        border-radius: 0.5rem;
        background-color: #ffffff;
        color: #0052D4;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-register:hover {
            background-color: #e3e3e3;
        }
</style>

<section class="full-height-section">
    <div class="hero-content">
        <h1>PasswordBox ile Şifrelerinizi Güvenle Yönetin</h1>
        <p>Güçlü, kullanımı kolay ve güvenilir şifre kasası uygulamamız ile tüm internet hesaplarınızı tek bir yerde güvenle saklayabilirsiniz.</p>

        @if (!signInManager.IsSignedIn(User))
        {
            <a href="/Account/Register" class="btn btn-register">Hemen Kayıt Ol</a>
        }
    </div>
</section>
